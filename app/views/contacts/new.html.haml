.container
  %h1{style: "margin-top: 50px; margin-bottom: 20px; color: #3EA7A7;"} Contact
  = simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f|
    = f.input :name, :required => true, :class=> "entry"
    = f.input :email, :required => true, :class=> "entry"
    = f.input :message, :as => :text, :required => false, :input_html => {:rows => 10}, :class=> "entry"

    .hidden
      = f.input :nickname, :hint => 'Leave this field blank!'
    .form-actions
      = f.button :submit, 'Send message', :class=> "btn btn-primary"
